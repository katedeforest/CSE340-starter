<!-- messages -->
<%- messages() %>
<!-- errors -->
<% if (errors!=null) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<div class="account__login">
  <!-- content heading -->
  <% if (title) { %>
  <h1 class="account__login-title"><%= title %></h1>
  <% } else { res.redirect('/') } %>

  <!-- login HTML form that accepts an email adress and password-->
  <form
    id="loginForm"
    action="/account/login"
    method="post"
    class="account__login-form"
  >
    <label for="account_email">Email Address: </label>
    <br />
    <input type="email" id="account_email" name="account_email" required />
    <br />
    <label for="account_password">Password: </label>
    <br />

    <input
      type="password"
      id="account_password"
      name="account_password"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    />
    <div class="pass-reqs">
      Passwords must be at least 12 characters and contain at least 1 number, 1
      capital letter and 1 special character.
    </div>
    <br />
    <!-- includes a button to submit the login credentials -->
    <div class="account__login-form-button">
      <button type="submit">LOGIN</button>
    </div>

    <!-- link that allows the user to send a URL that would request delivery of a registration view (if they do not yet have an account) -->
    <p>Don't have an account? <a href="/account/register">Click here.</a></p>
  </form>
</div>
